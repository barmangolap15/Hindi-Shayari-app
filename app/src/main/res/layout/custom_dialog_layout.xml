<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/custom_dialog_txtview"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorAccent"
        android:background="@color/demoColor"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="hello world"
        android:textSize="20sp"
        android:fontFamily="@font/product_sans_regular"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/copy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/icons_copy"
            android:background="@drawable/ripple_back_three"
            android:contentDescription="@string/app_name" />
        <ImageButton
            android:id="@+id/whatsAppshare"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_back_three"
            android:src="@drawable/icons_whatsapp"
            android:contentDescription="@string/app_name" />
        <ImageButton
            android:id="@+id/share"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_back_three"
            android:src="@drawable/icons_share"
            android:contentDescription="@string/app_name" />
    </LinearLayout>


</LinearLayout>